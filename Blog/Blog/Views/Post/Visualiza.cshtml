@model Blog.Models.Post
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Novo Post</title>
    </head>
    <body>
        <div>
            <form action="/Post/Edita" method="post">

                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="publicado" value="@Model.Publicado.ToString()" />
                <input type="hidden" name="dataPublicacao" value="@Model.DataPublicacao" />

                <label>
                    Título: <input name="titulo" value="@Model.Titulo" maxlength="50" required />
                </label>
                @Html.ValidationMessage("titulo")

                <label>
                    Resumo: <input name="resumo" value="@Model.Resumo" />
                </label>
                @Html.ValidationMessage("resumo")

                <label>
                    Categoria: <input name="categoria" value="@Model.Categoria" />
                </label>
                @Html.ValidationMessage("categoria")

                <button type="submit">Cadastrar</button>

            </form>

        </div>
      
        <script src="~/js/jquery.js"></script>
        <script src="~/js/jquery.validate.js"></script>
        <script>
            $("form").validate();
        </script>

    </body>
    </html>
   
