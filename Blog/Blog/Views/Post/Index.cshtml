@model IList<Blog.Models.Post>

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>
        <div>
            <h2>Lista de Posts</h2>
            @Html.ActionLink("Incluir Post", "Novo")
            <table>

                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Resumo</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                        <th>Publicado?</th>
                    </tr>
                </thead>


                <tbody>

                    @foreach (var p in Model)
                    {
                        <tr>

                            <td>@Html.ActionLink(p.Titulo, "Visualiza", new { id = p.Id })</td>

                            <td>@p.Resumo</td>
                            <td>@p.Categoria</td>
                            <td>

                                @Html.ActionLink("Remover", "RemovePost", new { id = p.Id })
                                @Html.ActionLink("Publicar", "PublicaPost", new { id = p.Id })

                            </td>
                            <td>
                                @if (p.Publicado)
                                {
                                    @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao))
                                }
                                else
                                {
                                    @Html.Raw("Não")
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <a href="/post/novo">
                Nova Publicação
            </a>

        </div>
    </body>
    </html>

        